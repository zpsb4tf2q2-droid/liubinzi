{
  "name": "project",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "dev": "next dev",
    "dev:web": "next dev",
    "dev:api": "tsx watch --clear-screen=false apps/api/src/server.ts",
    "dev:docker": "docker compose up",
    "dev:docker:build": "docker compose up --build",
    "dev:docker:detach": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:clean": "docker compose down --volumes --remove-orphans",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit && eslint . --max-warnings=0",
    "lint:eslint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --max-warnings=0 --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm exec eslint --max-warnings=0 --fix"
    ],
    "*.{js,jsx,ts,tsx,md,css,json}": [
      "pnpm exec prettier --write"
    ]
  },
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "next": "16.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.49",
    "prettier": "^3.6.2",
    "prisma": "^5.21.1",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vitest": "^2.1.4"
  }
}
