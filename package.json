{
  "name": "project",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "db:generate": "pnpm --filter @project/api db:generate",
    "db:migrate": "pnpm --filter @project/api db:migrate",
    "db:push": "pnpm --filter @project/api db:push",
    "db:studio": "pnpm --filter @project/api db:studio",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,mts,cjs}": [
      "pnpm exec eslint --max-warnings=0 --fix"
    ],
    "*.{js,jsx,ts,tsx,mjs,mts,cjs,md,css,json}": [
      "pnpm exec prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.6.2",
    "turbo": "^2.2.3",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "vitest": "^2.1.4"
  }
}
