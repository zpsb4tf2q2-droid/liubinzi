{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/api/healthz"
  },
  "variables": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "API_HOST": "0.0.0.0",
    "API_PORT": "3000",
    "NEXT_PUBLIC_API_BASE_URL": "",
    "NEXTAUTH_URL": "",
    "NEXTAUTH_SECRET": "",
    "DATABASE_URL": ""
  }
}
