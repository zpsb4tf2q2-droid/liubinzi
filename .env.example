# Root configuration
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Web client configuration
NEXT_PUBLIC_APP_NAME=Project Starter
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Server / API configuration
API_HOST=0.0.0.0
API_PORT=3000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/project?schema=public

# FastAPI microservice configuration
FASTAPI_PROJECT_NAME=Hardware Control Service
FASTAPI_DEBUG=true
FASTAPI_SECRET_KEY=changeme
FASTAPI_DATABASE_URL=sqlite:///./hardware_control.db
FASTAPI_REDIS_URL=redis://localhost:6379/0
FASTAPI_SERVICE_API_KEYS=internal-service-key
FASTAPI_BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
FASTAPI_HTTP_CLIENT_TIMEOUT=10.0
FASTAPI_HTTP_CLIENT_RETRIES=3
FASTAPI_HTTP_RATE_LIMIT=5
FASTAPI_HTTP_RATE_PERIOD_SECONDS=1.0
FASTAPI_MESSAGE_BROKER_ENABLED=false
FASTAPI_MESSAGE_BROKER_CHANNEL=hardware-events
FASTAPI_HARDWARE_DEFAULT_ADAPTER=mock
FASTAPI_SERVICE_REGISTRY_ENDPOINTS=monitor=http://localhost:9000

# Postgres container configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=project
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_SCHEMA=public
